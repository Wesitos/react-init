{
    "reactApp": {
        "src": "./src/app/",
        "extname": "jsx",
        "build": "./build/static/js/",
        "watch": "./src/**/*.?(js|jsx)"
    },
    "html":{
        "src": "./src/html",
        "build": "./build/",
        "extname": "html"
    },
    "styles": {
        "css":{
            "src": "./src/styles/",
            "extname": "css"
        },
        "sass": {
            "src": "./src/styles/",
            "extname": "scss"
        },
        "build": "./build/static/css/"
    },
    "script": {
        "src": "./src/js",
        "build": "./build/static/js/"
    },
    "vendor": {
        "require": [
            "react",
            "react-dom"
        ],

      "build": {
          "dirname": "./build/static/js/",
          "name": "vendor.js"
      }
    }
}
